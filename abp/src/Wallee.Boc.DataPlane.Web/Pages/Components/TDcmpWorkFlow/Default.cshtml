@* <abp-script src="/viz-js/viz-standalone.js/viz-standalone.js"></abp-script> *@
<abp-card abp-border="Danger">
    <abp-card-body>
        <abp-row>
            <abp-column size="_9" class="d-flex flex-column">
                <div class="pe-0 pe-md-4">
                    <p>
                        <small class="text-muted" id="tdcmpCreationDate">
                        </small>
                        <small class="text-secondary" id="tdcmpDataDate"></small>
                    </p>
                    <h5 class="mb-4 fs-4">信息管理组件任务工作流</h5>
                </div>
            </abp-column>
            <abp-column size="_3" class="d-flex flex-column justify-content-center align-items-center">
                <p class="text-secondary fs-1 fw-bold" id="tdcmpProgress"></p>
            </abp-column>
        </abp-row>
        <div class="d-flex flex-row justify-content-between align-items-center">
            <div id="tdcmpStatus"></div>
            <div>
                <abp-button size="Small" icon="fas fa-play" button-type="Outline_Primary" title="开始执行">
                </abp-button>
                <abp-button size="Small" icon="fas fa-pause" button-type="Outline_Primary" title="暂停执行">
                </abp-button>
                <abp-button abp-collapse-id="dotGraphCollapse" size="Small" icon="fas fa-signal" button-type="Outline_Primary" title="状态图">
                </abp-button>
            </div>
        </div>
        <hr />
        <abp-collapse-body id="dotGraphCollapse" style="overflow-x:auto;">
            <div id="dotGraph" class="mt-3 mb-3"></div>
        </abp-collapse-body>
    </abp-card-body>
</abp-card>
