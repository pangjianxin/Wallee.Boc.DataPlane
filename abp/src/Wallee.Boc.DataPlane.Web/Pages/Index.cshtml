@page
@using Microsoft.AspNetCore.Mvc.Localization
@using Wallee.Boc.DataPlane.Localization
@using Volo.Abp.Users
@model Wallee.Boc.DataPlane.Web.Pages.IndexModel
@inject IHtmlLocalizer<DataPlaneResource> L
@inject ICurrentUser CurrentUser
@section styles {
    <abp-style src="/Pages/Index.css" />
}
@section scripts {
    <abp-script src="/Pages/Index.js" />
}
<div class="container">
    <div class="p-5 text-center">
        <div class="d-inline-block bg-success text-white p-1 h5 rounded mb-4 " role="alert">
            <h5 class="m-1"> <i class="fas fa-rocket"></i> 好消息, <strong>系统</strong> 已经开始正常运行!</h5>
        </div>
        <h1>包头分行数据分析平台</h1>

        @if (!CurrentUser.IsAuthenticated)
        {
            <a abp-button="Primary" href="~/Account/Login"><i class="fa fa-sign-in"></i> @L["Login"]</a>
        }

    </div>



</div>
